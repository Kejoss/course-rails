<%= turbo_frame_tag 'modal' %>
<section id="chapters_all">
   <div class= "py-10 flex flex-col w-full">
        <h2 class="py-5 text-3xl text-chapterStrong font-bold text-center">Chapters</h2>
        <p class="text-sm text-center text-chapterStrong font-semibold">
            Lorem ipsum dolor sit amet, consectetur adipisicing 
            elit. Quae exercitationem possimus aliquam quas doloremque <br>
            temporibus eligendi atque incidunt facilis repellat,  <br>
            aperiam quis fugit deleniti consequuntur. Aliquam, <br> 
            dolorum. Ab, reiciendis recusandae?
        </p>
        <div class="flex justify-center py-5">
            <%= link_to new_chapter_path, id:"create_chapter_welcome", data: {turbo_frame: 'modal'} do %>
                <div class="p-3 bg-evaluationStrong text-white text-sm font-semibold rounded-lg">
                    Create chapter
                </div>
            <% end %>
        </div>

   </div>
   
    <div>
        <% chapters.each do |chapter| %>
            <%=  render "chapter", chapter: chapter %>
        <% end %>
    </div>
</section>